    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (MVC)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/InternalMvc/bin/Debug/net6.0/InternalMvc.dll",
            "args": [],
            "cwd": "${workspaceFolder}/InternalMvc",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/InternalMvc/Views"
            }
        },
        {
            "name": ".NET Core Launch (WebApi)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/InternalApi/bin/Debug/net6.0/InternalApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/InternalApi",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}